{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": true,
  "singleQuote": true,
  "arrowParens": "always",
  "printWidth": 120,

  "plugins": ["@ianvs/prettier-plugin-sort-imports"],
  "importOrder": [
    "^vue$",
    "",
    "^@/store/(.*)$",
    "",
    "^@/composables/(.*)$",
    "",
    "^@/components/(.*)$",
    "",
    "^@/interfaces/(.*)$",
    "",
    "<TYPES>",
    "",
    "^vuetify$",
    "",
    "^@vueuse/(.*)$",
    "",
    "^(vee-validate|yup)$",
    "",
    "^dayjs$",
    "",
    "<THIRD_PARTY_MODULES>",
    "",
    "^@/utils/(.*)$",
    "",
    "^[./]",
    "",
    "^(?!.*[.]css$)[./].*$",
    ".css$"
  ],
  "importOrderSortSpecifiers": true
}
